FLASK_SECRET_KEY=replace-with-long-random-secret
DATABASE_URL=postgresql+psycopg://mtg_user:replace-db-password@127.0.0.1:5432/mtg_draft_app

# Security baseline
WTF_CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=180
APP_LOGIN_ENABLED=true
APP_LOGIN_USERNAME=mtg
APP_LOGIN_PASSWORD=replace-with-strong-password

# Cookie hardening
# Set FLASK_ENV=production so SESSION_COOKIE_SECURE is enforced.
FLASK_ENV=production
